problem: https://leetcode.com/problems/triangle/description/?envType=daily-question&envId=2025-09-25

solution:
class Solution {
public:
    int minimumTotal(vector<vector<int>>& triangle) {
        int n = triangle.size();
        vector<int> minPath(triangle.back());

        for(int i=n-2; i>=0; i--){
            for(int j=0; j<=i; j++){
                minPath[j] = min(minPath[j], minPath[j+1]) + triangle[i][j];
            }
        }

        return minPath[0];
    }
};
