problem: https://leetcode.com/problems/calculate-money-in-leetcode-bank/description/?envType=daily-question&envId=2025-10-25

solution:
class Solution {
public:
    int totalMoney(int n) {
        int weeks = n/7;
        int res = weeks * 28;
        res += (7 * weeks * (weeks - 1)) / 2;

        if(n%7){
            int days = n%7, st = weeks+1;
            for(int i=1; i<=days; i++) res += st++;
        }
        return res;
    }
};
