problem: https://leetcode.com/problems/container-with-most-water/description/?envType=daily-question&envId=2025-10-04

solution:
class Solution {
public:
    int maxArea(vector<int>& height) {
        int res = 0, n = height.size();
        int l = 0, r = n-1;
        while(l < r){
            int currArea = min(height[l], height[r]) * (r-l);
            res = max(res, currArea);
            if(height[l] > height[r]) r--;
            else l++;
        }
        return res;
    }
};

