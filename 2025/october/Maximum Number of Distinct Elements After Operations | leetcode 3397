problem: https://leetcode.com/problems/maximum-number-of-distinct-elements-after-operations/description/?envType=daily-question&envId=2025-10-18

solution:
class Solution {
public:
    int maxDistinctElements(vector<int>& nums, int k) {
        int res = 0, prev = INT_MIN;
        sort(nums.begin(), nums.end());
        for(int num : nums){
            int minNum = num - k, maxNum = num + k;
            if(prev < minNum) res++, prev = minNum;
            else if(prev < maxNum) res++, prev++;
        }
        return res;
    }
};
