problem: https://leetcode.com/problems/count-negative-numbers-in-a-sorted-matrix/?envType=daily-question&envId=2025-12-28

solution:
class Solution {
public:
    int countNegatives(vector<vector<int>>& grid) {
        int m = grid.size(), n = grid[0].size(), r = m-1, c = 0, res = 0;
        while(r>=0 && c<n){
            if(grid[r][c] < 0){
                res += n-c;
                r--;
            } else c++;
        }
        return res;
    }
};
