problem: https://leetcode.com/problems/keep-multiplying-found-values-by-two/description/?envType=daily-question&envId=2025-11-19

solution:
// Approach 1:
class Solution {
public:
    int findFinalValue(vector<int>& nums, int original) {
        sort(nums.begin(), nums.end());
        for(int num : nums){
            if(num == original) original *= 2;
        }
        return original;
    }
};

// Approach 2:
class Solution {
public:
    int findFinalValue(vector<int>& nums, int original) {
        unordered_set<int> numset(nums.begin(), nums.end());
        while(numset.count(original)) original *= 2;
        return original;
    }
};

// Approach 3:
class Solution {
public:
    int findFinalValue(vector<int>& nums, int original) {
        bool arr[1001] = {};
        for(int num : nums) arr[num] = true;
        while(original < 1001 && arr[original]) original *= 2;
        return original;
    }
};
