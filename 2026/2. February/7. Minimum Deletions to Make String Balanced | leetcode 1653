problem: https://leetcode.com/problems/minimum-deletions-to-make-string-balanced/description/?envType=daily-question&envId=2026-02-07

solution:
class Solution {
public:
    int minimumDeletions(string s) {
        int n = s.length(), a_count=0, b_count=0, res=n;
        vector<int> total_a(n, 0), total_b(n, 0);

        for(int i=n-1; i>=0; i--){
            total_a[i] = a_count;
            if(s[i] == 'a') a_count++;
        }

        for(int i=0; i<n; i++){
            total_b[i] = b_count;
            if(s[i] == 'b') b_count++;
        }

        for(int i=0; i<n; i++){
            res = min(res, total_a[i]+total_b[i]);
        }
        return res;
    }
};
