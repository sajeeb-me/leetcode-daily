problem: https://leetcode.com/problems/reverse-bits/description/?envType=daily-question&envId=2026-02-16

solution:
class Solution {
public:
    uint32_t reverseBits(uint32_t n) {
        uint32_t ans = 0;

        for(int i=1; i<=32; i++){
            ans <<= 1;
            ans |= (n&1);
            n >>= 1;
        }

        return ans;
    }
};
