problem: https://leetcode.com/problems/trionic-array-i/submissions/1907136119/?envType=daily-question&envId=2026-02-03

solution:
class Solution {
private:
    bool helper(vector<int>& A, int a, int b) {
        if (a == 0 || b == A.size() - 1) return false;
        for (int i = a; i < b; i++)
            if (A[i] <= A[i + 1]) return false;
        
        return true;
    }

public:
    bool isTrionic(vector<int>& nums) {
        int n = nums.size(), peak = n - 1, valley = 0;

        for (int i = 0; i < n - 1; i++) {
            if (peak == n - 1 && nums[i] >= nums[i + 1]) peak = i;
            if (valley == 0 && nums[n - 1 - i] <= nums[n - 2 - i]) valley = n - 1 - i;
            if (peak < valley) return helper(nums, peak, valley);
        }

        return false;
    }
};
