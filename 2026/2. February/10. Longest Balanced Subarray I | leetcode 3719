problem: https://leetcode.com/problems/longest-balanced-subarray-i/description/?envType=daily-question&envId=2026-02-10

solution:
class Solution {
public:
    int longestBalanced(vector<int>& nums) {
        int n = nums.size(), res = 0, X = 1e5+1;
        vector<int> freq(X, 0);
        for(int i=0; i<n; i++){
            int cnt[2] = {0};
            for(int j=i; j<n; j++){
                int num = nums[j];
                if(++freq[num] == 1) cnt[num & 1]++;
                if(cnt[0] == cnt[1]) res = max(res, j-i+1);
            }
            for(int j=i; j<n; j++) freq[nums[j]] = 0;
        }
        return res;
    }
};
