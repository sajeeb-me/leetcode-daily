problem: https://leetcode.com/problems/binary-gap/description/?envType=daily-question&envId=2026-02-22

solution:
class Solution {
public:
    int binaryGap(int n) {
        int i=-1, j=0, res = 0;
        while(n != 0){
            if(n & 1){
                if(i != -1) res = max(res, j-i);
                i = j;
            }
            j++;
            n >>= 1;
        }
        return res;
    }
};
