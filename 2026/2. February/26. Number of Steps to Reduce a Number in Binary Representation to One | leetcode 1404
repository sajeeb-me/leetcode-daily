problem: https://leetcode.com/problems/number-of-steps-to-reduce-a-number-in-binary-representation-to-one/description/?envType=daily-question&envId=2026-02-26

solution: 
// Approach 1:
class Solution {
private:
    void addOne(string &s) {
        int i = s.length()-1;

        while(i >= 0 && s[i] != '0') {
            s[i] = '0';
            i--;
        }

        if(i < 0) {
            s = '1' + s;
        } else {
            s[i] = '1';
        }
    }

public:
    int numSteps(string s) {
        int op = 0;

        while(s.length() > 1) {
            int n = s.length();

            if(s[n-1] == '0') {
                s.pop_back();
            } else {
                addOne(s);
            }

            op++;
        }

        return op;
    }
};

// Approach 2:
class Solution {
public:
    int numSteps(string s) {
        int sz = s.length();
        int res = sz-1, carry = 0;
        for(int i=sz-1; i>0; i--){
            if(s[i] - '0' + carry == 1){
                res++;
                carry = 1;
            }
        }
        return res+carry;
    }
};
