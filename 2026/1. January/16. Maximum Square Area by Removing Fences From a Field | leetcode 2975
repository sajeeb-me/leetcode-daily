problem: https://leetcode.com/problems/maximum-square-area-by-removing-fences-from-a-field/description/?envType=daily-question&envId=2026-01-16

solution:
class Solution {
public:
    int maximizeSquareArea(int m, int n, vector<int>& hFences, vector<int>& vFences) {
        hFences.push_back(1); hFences.push_back(m);
        vFences.push_back(1); vFences.push_back(n);

        long long res = 0, MOD = 1e9 + 7;
        unordered_set<int> unSet;

        for (int i = 0; i < hFences.size(); i++) {
            for (int j = i + 1; j < hFences.size(); j++) {
                unSet.insert(abs(hFences[j] - hFences[i]));
            }
        }

        for (int i = 0; i < vFences.size(); i++) {
            for (int j = i + 1; j < vFences.size(); j++) {
                int num = abs(vFences[j] - vFences[i]);
                if (unSet.count(num)) {
                    res = max(res, (long long)num);
                }
            }
        }

        if (res == 0) return -1;
        return (res * res) % MOD;
    }
};
