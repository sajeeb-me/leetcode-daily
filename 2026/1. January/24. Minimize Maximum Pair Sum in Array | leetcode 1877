problem: https://leetcode.com/problems/minimize-maximum-pair-sum-in-array/submissions/1895703645/?envType=daily-question&envId=2026-01-24

solution:
class Solution {
public:
    int minPairSum(vector<int>& nums) {
        sort(nums.begin(), nums.end());
        int res = 0, n = nums.size();
        for(int i=0; i<n/2; i++){
            res = max(res, nums[i] + nums[n-i-1]);
        }
        return res;
    }
};
