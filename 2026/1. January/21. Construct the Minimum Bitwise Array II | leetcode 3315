problem: https://leetcode.com/problems/construct-the-minimum-bitwise-array-ii/description/?envType=daily-question&envId=2026-01-21

solution:
class Solution {
public:
    vector<int> minBitwiseArray(vector<int>& nums) {
        vector<int> res(nums.size());

        for (int i = 0; i < nums.size(); i++) {
            int num = nums[i];

            if (num == 2) {
                res[i] = -1;
                continue;
            }

            int numCopy = num;
            int count = 0;

            while ((num & 1) == 1) {
                count++;
                num >>= 1;
            }
            res[i] = numCopy - (1 << (count - 1));
        }

        return res;   
    }
};
