problem: https://leetcode.com/problems/largest-magic-square/description/?envType=daily-question&envId=2026-01-18

solution:
class Solution {
public:
    int largestMagicSquare(vector<vector<int>>& grid) {
        int m = grid.size(), n = grid[0].size(), res = 0;
        vector<vector<int>> rowSum(m + 2, vector<int>(n + 2)), colSum(rowSum), p(rowSum), q(rowSum);

        for (int i = 1; i <= m; ++i){
            for (int j = 1; j <= n; ++j) {
                rowSum[i][j] += grid[i - 1][j - 1] + rowSum[i][j - 1];
                colSum[i][j] += grid[i - 1][j - 1] + colSum[i - 1][j];
                p[i][j] += grid[i - 1][j - 1] + p[i - 1][j - 1];
                q[i][j] += grid[i - 1][j - 1] + q[i - 1][j + 1];
            }
        }
        for (int i = 1; i <= m; ++i){
            for (int j = 1; j <= n; ++j){
                for (int k = min(m - i, n - j); k > res; --k) {
                    int sum = p[i + k][j + k] - p[i - 1][j - 1];
                    bool match = sum == q[i + k][j] - q[i - 1][j + k + 1]; 
                    for (int l = 0; l <= k && match; ++l) {
                        match &= sum == rowSum[i + l][j + k] - rowSum[i + l][j - 1];
                        match &= sum == colSum[i + k][j + l] - colSum[i - 1][j + l];
                    }
                    res = match ? k : res;
                }
            }
        }
        return res + 1;
    }
};
